{
  "name": "express",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "start:dev": "cross-env NODE_ENV=development npm run migrate && cross-env NODE_ENV=development nodemon index",
    "start": "cross-env NODE_ENV=production npm run migrate && cross-env NODE_ENV=production node index",
    "test": "cross-env NODE_ENV=test jest --watch && cross-env NODE_ENV=test node test-cleanup npm run clean-up",
    "posttest": "",
    "clean-up": "npm run test-cleanup",
    "lint": "eslint .",
    "test:staging": "cross-env NODE_ENV=staging npm run migrate && cross-env NODE_ENV=staging jest --watch --maxWorkers=1 --forceExit && cross-env NODE_ENV=staging npm run clean-up",
    "migrate": "sequelize-cli db:migrate"
  },
  "author": "EdwinMarrima",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "config": "^3.3.6",
    "express": "^4.17.1",
    "express-validator": "^6.12.1",
    "file-type": "^16.5.3",
    "i18next": "^20.3.5",
    "i18next-fs-backend": "^1.1.1",
    "i18next-http-middleware": "^3.1.4",
    "jsonwebtoken": "^8.5.1",
    "nodemailer": "^6.6.3",
    "pg": "^8.7.1",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.6.5",
    "sqlite3": "^5.0.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.0.6",
    "jest-watch-typeahead": "^0.6.4",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "smtp-server": "^3.9.0",
    "supertest": "^6.1.4"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "eqeqeq": "warn",
      "prettier/prettier": "warn"
    }
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120
  },
  "jest": {
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/config/"
    ]
  }
}
